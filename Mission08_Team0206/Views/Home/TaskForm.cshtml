@model Mission08_Team0206.Models.TaskItem

@{
    // Set page title dynamically based on whether we are adding or editing
    ViewData["Title"] = Model.TaskItemId == 0 ? "Add Task" : "Edit Task";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<!-- Task Add/Edit Form - Posts to SaveTask action -->
<form asp-action="SaveTask" method="post">

    <!-- Hidden fields to preserve TaskItemId and Completed status during form submission -->
    <input type="hidden" asp-for="TaskItemId" />
    <input type="hidden" asp-for="Completed" />

    <!-- Bootstrap grid layout for the form fields -->
    <div class="row">

        <!-- Left column: Task Description and Due Date -->
        <div class="col-md-6">

            <!-- Task Description input (required) -->
            <div class="mb-3">
                <label asp-for="TaskDescription" class="form-label"></label>
                <input asp-for="TaskDescription" class="form-control"
                       placeholder="Enter task description" />
                <span asp-validation-for="TaskDescription" class="text-danger"></span>
            </div>

            <!-- Due Date input (optional) -->
            <div class="mb-3">
                <label asp-for="DueDate" class="form-label"></label>
                <input asp-for="DueDate" type="date" class="form-control" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>

        </div>

        <!-- Right column: Category dropdown and Quadrant radio buttons -->
        <div class="col-md-6">

            <!-- Category dropdown populated from database (rubric requirement) -->
            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label"></label>
                <select asp-for="CategoryId" class="form-select">
                    <option value="">-- Select a Category --</option>
                    @foreach (var cat in (List<Category>)ViewBag.Categories)
                    {
                        <option value="@cat.CategoryId">@cat.CategoryName</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <!-- Quadrant selection using radio buttons (required) -->
            <div class="mb-3">
                <label asp-for="Quadrant" class="form-label"></label>
                <span asp-validation-for="Quadrant" class="text-danger"></span>

                <!-- Radio button for each of the four quadrants -->
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Quadrant"
                           value="1" id="quad1" />
                    <label class="form-check-label" for="quad1">
                        Quadrant 1 – Important / Urgent
                    </label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Quadrant"
                           value="2" id="quad2" />
                    <label class="form-check-label" for="quad2">
                        Quadrant 2 – Important / Not Urgent
                    </label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Quadrant"
                           value="3" id="quad3" />
                    <label class="form-check-label" for="quad3">
                        Quadrant 3 – Not Important / Urgent
                    </label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Quadrant"
                           value="4" id="quad4" />
                    <label class="form-check-label" for="quad4">
                        Quadrant 4 – Not Important / Not Urgent
                    </label>
                </div>
            </div>

        </div>

    </div>

    <!-- Submit and Cancel buttons -->
    <div class="row mt-3">
        <div class="col">
            <button type="submit" class="btn btn-primary">Save Task</button>
            <a asp-action="Quad" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </div>

</form>

<!-- Include client-side validation scripts for form validation -->
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
