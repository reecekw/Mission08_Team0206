@model Mission08_Team0206.Models.TaskItem

@{
    // Set page title dynamically based on whether we are adding or editing
    ViewData["Title"] = Model.TaskItemId == 0 ? "Add Task" : "Edit Task";
}

<!-- Add/Edit Task Form: Uses Bootstrap grid layout with two columns -->
<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <!-- Form posts to SaveTask action which handles both adding and editing -->
    <form asp-action="SaveTask" method="post" class="shadow-sm p-4 rounded bg-light">

        <!-- Hidden field to track the task ID (0 for new tasks, existing ID for edits) -->
        <input type="hidden" asp-for="TaskItemId" />

        <div class="row">

            <!-- Left column: Task description, due date, and completed checkbox -->
            <div class="col-md-6">

                <div class="mb-3">
                    <label asp-for="TaskDescription" class="form-label fw-bold"></label>
                    <input asp-for="TaskDescription" class="form-control"
                           placeholder="Enter task description" />
                    <span asp-validation-for="TaskDescription" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DueDate" class="form-label fw-bold"></label>
                    <input asp-for="DueDate" type="date" class="form-control" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>

                <div class="form-check mb-3 mt-4">
                    <input asp-for="Completed" class="form-check-input" type="checkbox" id="completedCheck" />
                    <label class="form-check-label fw-bold" for="completedCheck">
                        Mark as Completed
                    </label>
                </div>

            </div>

            <!-- Right column: Category dropdown and quadrant radio buttons -->
            <div class="col-md-6">

                <!-- Category dropdown populated from the database -->
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label fw-bold"></label>
                    <select asp-for="CategoryId" class="form-select">
                        <option value="">-- Select a Category --</option>
                        @foreach (var cat in (List<Category>)ViewBag.Categories)
                        {
                            <option value="@cat.CategoryId">@cat.CategoryName</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Quadrant" class="form-label fw-bold"></label>
                    <span asp-validation-for="Quadrant" class="text-danger"></span>

                    <div class="form-check mt-2">
                        <input class="form-check-input" type="radio" asp-for="Quadrant"
                               value="1" id="quad1" />
                        <label class="form-check-label" for="quad1">
                            Quadrant 1 – Important / Urgent
                        </label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Quadrant"
                               value="2" id="quad2" />
                        <label class="form-check-label" for="quad2">
                            Quadrant 2 – Important / Not Urgent
                        </label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Quadrant"
                               value="3" id="quad3" />
                        <label class="form-check-label" for="quad3">
                            Quadrant 3 – Not Important / Urgent
                        </label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Quadrant"
                               value="4" id="quad4" />
                        <label class="form-check-label" for="quad4">
                            Quadrant 4 – Not Important / Not Urgent
                        </label>
                    </div>
                </div>

            </div>

        </div>

        <!-- Submit and Cancel buttons -->
        <div class="row mt-4">
            <div class="col">
                <button type="submit" class="btn btn-primary px-4 shadow-sm">Save Task</button>
                <a asp-action="Quad" class="btn btn-secondary ms-2 shadow-sm">Cancel</a>
            </div>
        </div>

    </form>
</div>

<!-- Include client-side validation scripts for form validation -->
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}