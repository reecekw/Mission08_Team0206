@model List<Mission08_Team0206.Models.TaskItem>

@{
    ViewData["Title"] = "Quadrants";
}

<h2 class="text-center mb-4">Task Quadrants</h2>

<div class="row">

    <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm border-danger">
            <div class="card-header bg-danger text-white fw-bold">
                Quadrant I – Important / Urgent
            </div>
            <div class="card-body">
                @foreach (var task in Model.Where(t => t.Quadrant == 1))
                {
                    <div class="mb-3 p-2 border rounded bg-light">
                        <strong>@task.TaskDescription</strong><br />
                        @if (task.DueDate != null)
                        {
                            <small class="text-muted">Due: @task.DueDate.Value.ToShortDateString()</small><br />
                        }
                        <small class="text-muted">Category: @task.Category?.CategoryName</small>
                        
                        <div class="mt-2">
                            <a asp-action="Edit" asp-route-id="@task.TaskItemId" class="btn btn-sm btn-primary">Edit</a>
                            
                            <form asp-action="MarkCompleted" asp-route-id="@task.TaskItemId" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-success">Complete</button>
                            </form>
                            
                            <form asp-action="Delete" asp-route-id="@task.TaskItemId" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

